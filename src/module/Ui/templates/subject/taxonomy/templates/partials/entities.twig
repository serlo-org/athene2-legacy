<div class="row">
    <div class="col-md-9">
        {% if term.getDescription() %}
            <em>{{ term.getDescription() }}</em>
        {% endif %}
    </div>
    <div class="col-md-3">
        <div class="btn-group pull-right">
            {% if isGranted('entity.create', term) and isGranted('taxonomy.term.associate', term) %}
                <div class="btn-group">
                    <a class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-file"></span> <span class="caret"></span> </a>
                    <ul class="dropdown-menu">
                        {% for type in subject().getOptions(subject).getAllowedEntities() %}
                            <li>
                                <a href="{{ url('entity/create', {'type': type}, {'query': {'taxonomy': {'term': term.getId() }}}) }}">
                                    {{ translate(type) }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            {% if isGranted('taxonomy.term.associated.sort', term) %}
                <a class="btn btn-default btn-xs"
                   href="{{ url('taxonomy/term/sort-associated', {'association': 'entities', 'term': term.getId()}) }}">
                    <span class="glyphicon glyphicon-sort"></span> </a>
            {% endif %}
        </div>
    </div>
</div>
<hr>
<div>
    {% for i in 1..3 %}
        {% set type = cycle(['article', 'video', 'module'], i) %}
        {% if types.get(type) %}
            <div class="row">
            <div class="col-md-12">
                <h4>
                    <span class="glyphicon glyphicon-{{ cycle(['book', 'video', 'list'], i) }}"></span> {{ translate(cycle(['Articles', 'Videos', 'Modules'], i)) }}
                </h4>
                <hr>
            </div>
            {% set index = 0 %}
            {% for link in types.get(type) %}
                {% if index % 3 == 0 %}
                    </div>
                    <hr>
                    <div class="row">
                {% endif %}
                {% set index = index + 1 %}
                <div class="col-sm-4">
                    {% include 'subject/taxonomy/entity/default' with {'entity': link} only %}
                </div>
            {% endfor %}
            </div>
            <hr>
        {% endif %}
    {% endfor %}

    {% if types.get('text-exercise') or types.get('text-exercise-group') %}
        <!-- Rest -->
        <h4><span class="glyphicon glyphicon-ok-sign"></span> <strong>{{ translate('Exercises') }}</strong></h4>
        <hr>
        {% for link in links if link.getType().getName() in ['text-exercise', 'text-exercise-group'] %}
            <div class="row">
                <div class="col-xs-1">
                    <strong>{{ loop.index }}.</strong>
                </div>
                <div class="col-xs-11">
                    {% include 'subject/taxonomy/entity/default' with {'entity': link} only %}
                </div>
            </div>
            <hr>
        {% endfor %}
    {% endif %}
    <!-- Rest end -->
</div>