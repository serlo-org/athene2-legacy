$template = 'subject/plugin/taxonomy/templates/' . $name;
$forum = $this->subject->getSlug() . '/issues/taxonomy';
$data = array(
    'links' => $this->links,
    'acceptsEntities' => $this->acceptsEntities,
    'subject' => $this->subject,
    'plugin' => $this->plugin,
    'term' => $this->term,
    'terms' => $this->terms
);
?>
