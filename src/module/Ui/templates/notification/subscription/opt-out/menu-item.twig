{% if emailsActive %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-mute"></span> {{ 'Unsubscribe' | trans }} <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <span class="glyphicon glyphicon-volume-down"></span><a
                        href="{{ url('subscription/update', {'object': object, 'email': 0}) }}">{{ 'Unsubscribe emails only' | trans }}</a>
            </li>
            <li>
                <span class="glyphicon glyphicon-mute"></span><a
                        href="{{ url('subscription/unsubscribe', {'object': object}) }}">{{ 'Unsubscribe' | trans }}</a>
            </li>
        </ul>
    </li>
{% else %}
    <li>
        <a href="{{ url('subscription/unsubscribe', {'object': object}) }}">
            <span class="glyphicon glyphicon-mute"></span> {{ 'Unsubscribe' | trans }}
        </a>
    </li>
{% endif %}