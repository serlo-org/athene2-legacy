{{ pageHeader('Revisions').setBacklink(url('page/view', {'page': page.getId()})).render() }}
<div class="list-group">
    {% for revision in revisions if not(revision.isTrashed()) %}
        <div class="list-group-item">
            <a href="{{ url('page/revision/view', {'revision': revision.getId()}) }}">
                <table class="table">
                    <tr>
                        <td>{{ translate('Title: ') }}</td>
                        <td>{{ revision.getTitle() }}</td>
                    </tr>
                    <tr>
                        <td>{{ translate('Author: ') }}</td>
                        <td>{{ revision.getAuthor().getUsername() }}</td>
                    </tr>
                    <tr>
                        <td>{{ translate('Time: ') }}</td>
                        <td>{{ timeago().render(revision.getDate()) }}</td>
                    </tr>
                </table>
            </a>
            <hr>
            <div class="btn-group">
                <!-- edit button -->
                {% if isGranted('page.revision.create', page) %}
                    <a href="{{ url('page/revision/create', {'page': page.getId(), 'revision': revision.getId()}) }}" class="btn btn-xs btn-default">
                        <span class="glyphicon glyphicon-pencil"></span> {{ translate('Use for editing') }}
                    </a>
                {% endif %}
                {% if isGranted('event.log.get', revision) %}
                    <a class="btn btn-xs btn-default" href="{{ url('event/history', {'id': revision.getId()}) }}">
                        <span class="glyphicon glyphicon-time"></span> {{ translate('History') }}
                    </a>
                {% endif %}
                {% if revision.getRepository().getCurrentRevision() is not same as(revision) %}
                    {% if isGranted('page.revision.trash', revision) %}
                    <a href="{{ url('uuid/trash', {'id': revision.getId()}) }}" class="btn btn-xs btn-default">
                        <span class="glyphicon glyphicon-trash"></span> {{ translate('Trash') }}
                    </a>
                    {% endif %}
                    {% if isGranted('page.revision.checkout', revision) %}
                        <a href="{{ url('page/revision/checkout', {'page': page.getId(), 'revision': revision.getId()}) }}" class="btn btn-xs btn-default">
                            <span class="glyphicon glyphicon-ok"></span> {{ translate('Set as base') }}
                        </a>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>
<hr>
{% if isGranted('page.revision.create', page) %}
    <a href="{{ url('page/revision/create', {'page': page.getId(), 'revision': page.getCurrentRevision().getId() }) }}" class="btn btn-xs btn-default">
        <span class="glyphicon glyphicon-pencil"></span>
        {{ translate('Edit page') }}
    </a>
{% endif %}