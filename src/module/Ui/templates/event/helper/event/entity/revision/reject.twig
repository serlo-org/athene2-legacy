{% set user       = normalize().toAnchor(event.getActor()) %}
{% set revision   = normalize().toAnchor(event.getObject()) %}
{% set repository = normalize().toAnchor(event.getParameter('repository')) %}
{% set reason = event.getParameter('reason') %}
{% if reason %}
    {% trans %}
    {{ user }} rejected {{ revision }} in {{ repository }}: "{{ reason }}"
    {% endtrans %}
{% else %}
    {% trans %}
    {{ user }} rejected {{ revision }} in {{ repository }} without a reason
    {% endtrans %}
{% endif %}