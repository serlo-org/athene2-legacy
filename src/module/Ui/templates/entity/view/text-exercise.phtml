<?php /* @var $entity \Entity\Entity\EntityInterface */ ?>
<?php $entity = $this->entity; ?>
<?php $exercise = $this->entity; ?>
<?php $solution = $entity->getChildren('link', 'text-solution')->first(); ?>
<?php if($exercise->hasCurrentRevision()): ?>
    <article>
    	<section>
            <?php $revision = $exercise->getCurrentRevision(); ?>
            <?php echo $this->markdown()->toHtml($revision->get('content')); ?>
        </section>
        <ul class="nav nav-pills">
            <?php if(is_object($solution)): ?>
                <li>
                    <a data-toggle="collapse" data-parent="#solutions-<?php echo $solution->getId(); ?>" href="#solution-<?php echo $solution->getId(); ?>">
                        <?php echo $this->translate('Show the solution'); ?>
                    </a>
                </li>
            <?php endif; ?>
            <?php echo $this->partial('entity/view/partials/actions/small-essential', array('entity' => $this->entity)); ?>
        </ul>
    	<?php if(is_object($solution)): ?>
    	    <section class="panel-group" id="solutions-<?php echo $solution->getId(); ?>">
        	   <?php echo $this->partial('entity/view/default',array('entity' => $solution, 'hideActions' => array('detail', 'taxonomy'))); ?>
            </section>
        <?php endif; ?>
    </article>
<?php endif; ?>