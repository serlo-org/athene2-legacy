{% set revision = entity.getCurrentRevision() %}
{% set content = markdown().toHtml(revision.get('content')) %}
<article>
    <section itemprop=”articleBody”>
        {{ content }}
    </section>
    <hr>
    {% include 'entity/view/partials/license' %}
    <hr>
    <section class="hidden" id="discussion-{{ entity.getId() }}" itemprop="comment">
        {{ discussion(entity).render() }}
    </section>
</article>