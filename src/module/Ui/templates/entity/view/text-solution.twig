{% set revision = entity.getCurrentRevision() %}
<article class="panel-group">
    {% if(revision.get('hint')) %}
        <section class="collapse panel panel-default" id="hint-{{ entity.getId() }}">
            <div class="panel-body">
                <strong>
                    <ul class="nav nav-pills">
                        {% include 'entity/view/partials/actions/small-essential' %}
                    </ul>
                    <span class="glyphicon glyphicon-question-sign"></span>
                    {{ translate('Hint') }}
                </strong>
            </div>
            <div class="list-group">
                <div class="list-group-item">
                    {{ markdown().toHtml(revision.get('hint')) | raw }}
                </div>
            </div>
        </section>
    {% endif %}
    <section class="collapse panel panel-default" id="solution-{{ entity.getId() }}">
        <div class="panel-body">
            <strong>
                <ul class="nav nav-pills pull-right">
                    {% include 'entity/view/partials/actions/small-essential' %}
                </ul>
                <span class="glyphicon glyphicon-ok-circle"></span>
                {{ translate('Solution') }}
            </strong>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                {{ markdown().toHtml(revision.get('content')) | raw }}
            </div>
        </div>
        <div class="list-group">
            <div class="list-group-item">
                {{ entity().renderDiscussions(entity) }}
            </div>
        </div>
    </section>
</article>