{% set revision = entity.getCurrentRevision() %}
{% set solution = entity.getChildren('link', 'text-solution').first() %}
{% set hint = entity.getChildren('link', 'text-hint').first() %}
<article itemscope itemtype="http://schema.org/ScholarlyArticle">
    <section class="row">
        <div class="col-xs-6">
            {{ markdown().toHtml(revision.get('content')) | raw }}
        </div>
        <div class="col-xs-6">
            <ul class="nav nav-pills pull-right">
                {% if(solution) %}
                    <li data-toggle="tooltip" data-placement="bottom" title="{{ translate('I want to see the solution') }}">
                        <a data-toggle="collapse" href="#solution-{{ solution.getId() }}">
                            <span class="glyphicon glyphicon-ok-circle"></span>
                        </a>
                    </li>
                {% endif %}
                {% if(hint) %}
                    <li data-toggle="tooltip" data-placement="bottom" title="{{ translate('I need a hint') }}">
                        <a data-toggle="collapse" href="#hint-{{ hint.getId() }}">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </a>
                    </li>
                {% endif %}
                <li data-toggle="tooltip" data-placement="bottom" title="{{ translate('I want to comment this') }}">
                    <a data-toggle="collapse" data-parent="#discussions-{{ entity.getId() }}" href="#discussions-{{ entity.getId() }}">
                        <span class="glyphicon glyphicon-comment"></span>
                    </a>
                </li>
                {% include 'entity/view/partials/actions/small-essential' %}
            </ul>
        </div>
    </section>
    <section class="collapse" id="discussions-{{ entity.getId() }}">
        {{ discussion(entity).render() }}
    </section>
    {% if hint %}
        <section>
            {% include 'entity/view/default' with {'entity': hint, 'collapse': true} only %}
        </section>
    {% endif %}
    {% if solution %}
        <section>
            {% include 'entity/view/default' with {'entity': solution, 'collapse': true} only %}
        </section>
    {% endif %}
</article>