{{ pageHeader(normalize().toTitle(entity)).setSubtitle('History').render() }}
{% if(entity.countUnrevised() > 1) %}
    <div class="alert alert-info">
        {{ translate('There are multiple recent revisions for this object. Please be aware that they may be of very different nature. Consider reviewing all of them before accepting or merging.') }}
    </div>
{% endif %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ translate('#') }}</th>
        <th>{{ translate('Current') }}</th>
        <th>{{ translate('Author') }}</th>
        <th>{{ translate('Timestamp') }}</th>
    </tr>
    </thead>
    {% for revision in revisions %}
    {% set isCurrent = (revision == currentRevision) %}
    <tr class="{{ isCurrent ? 'success' : '' }}">
        <td>
            {{ revision.getId() }}
            (<a href="{{ url('entity/repository/compare', {'entity': entity.getId(), 'revision': revision.getId()}) }}">{{ translate('show') }}</a>)
        </td>
        <td>{{ isCurrent ? '<span class="glyphicon glyphicon-ok"></span>' : '' }}</td>
        <td>{{ normalize().toAnchor(revision.getAuthor()) }}</td>
        <td>{{ timeago().render(revision.getTimestamp()) }}</td>
    </tr>
    {% endfor %}
</table>