<div class="modal fade" id="revisionRejectModal" tabindex="-1" role="dialog" aria-labelledby="revisionRejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="revisionRejectModalLabel">{% trans %} Reject revision {% endtrans %}</h4>
            </div>
            <form method="post" action="{{ url('entity/repository/reject', {'entity': entity.getId(), 'revision': revision.getId()}) }}">
                <div class="modal-body">
                    <p class="form-group">
                        <label for="revision-reject-reason">{% trans %} Please specify why you are rejecting the submission. {% endtrans %}</label>
                        <textarea class="form-control" row="3" name="reason" id="revision-reject-reason" required></textarea>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %} Close {% endtrans %}</button>
                    <input type="submit" class="btn btn-danger" value="{% trans %} Reject {% endtrans %}">
                </div>
            </form>
        </div>
    </div>
</div>