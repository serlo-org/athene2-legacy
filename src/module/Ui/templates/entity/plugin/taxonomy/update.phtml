            <input type="hidden"
    			name="terms[<?php echo $term->getId(); ?>]" value="0" />
			<input
    			type="checkbox" name="terms[<?php echo $term->getId(); ?>]" value="1"
    			<?php echo $term->isAssociated('entities', $this->entity) ? 'checked="checked"' : '';?> />
            <?php echo $term->getName(); ?>
            <?php echo $this->partial('/entity/plugin/taxonomy/update', array('plugin' => $this->plugin, 'entity' => $this->entity, 'terms' => $term->getChildren(), 'isChild' => true)); ?>
        </li>
    <?php endforeach; ?>
</ul>
<?php if(!isset($this->isChild)): ?>
