foreach ($this->pages as $page) {
    $liClasses = [];
    // visibility of the sub-page
    if (! $page->isVisible() || !$this->navigation()->accept($page)) {
        continue;
    }
    if ($page->getLabel() == 'divider') {
        $html[] = '<li class="divider"></li>';
        continue;
    }

    $dropdown = ! empty($page->pages);

    if ($page->isActive()) {
        $liClasses[] = 'active';
    }

    $html[] = '<li' . (count($liClasses) ? (' class="' . implode(' ', $liClasses) . '">') : '>');

    $html[] = '<a href="' . rawurldecode($page->getHref()) . '">';

    if ($page->get('icon')) {
        $html[] = '<i class="glyphicon glyphicon-' . $page->get('icon') . '"></i>';
    }

    $html[] = $page->getLabel();
    $html[] = "</a>";

    if ($dropdown) {
        $html[] = '<ul>';
        $html[] = $this->partial('layout/navigation/partial/nested-navigation-list', array('pages' => $page->pages));
        $html[] = '</ul>';
    }

    $html[] = "</li>";
}

echo join(PHP_EOL, $html);